@model IEnumerable<Makers_of_Denmark.Models.Makerspace>
@{
    ViewData["Title"] = "Explore";
}
<partial name="../Shared/_TopNavBar.cshtml">

    <main class="explore" id="explore">
        <div class="explore-wrapper">

            <section class="intro-section">

                <div class="box1">
                    <h1 class="title">Udforsk din kreativitet</h1>
                    <p class="paragraph">Find Events og Makerspaces i nærheden af dig. Udforsk de forskellige Makerspaces i dit område, og find ud af hvilke badges du kan få!</p>
                    <button class="button title-button">Søg alle</button>
                </div>

                <div class="box2">
                    <!--Placeholder billede-->
                    <img src="~/css/img/workshop.jpg" class="placeholderbillede" />
                </div>

            </section>

            <section>

                <div class="flex">
                    <h2 class="title">Makerspaces i nærheden</h2>
                    <a class="link-text"><!--Hvis der blev lavet en fuld liste-->Se mere</a>
                </div>
                <div class="scrolling-wrapper-flexbox">
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            @*<img src="@Url.Content(item.logoUrl)" alt="" />*@
                            <img src="~/css/img/badges/020-badge.png" />
                            <a asp-area="" asp-controller="Makerspace" asp-route-id="@item.id"><h3>@Html.DisplayFor(modelItem => item.name)</h3></a>
                        </div>
                    }
                </div>

                <div class="flex">
                    <h2 class="title">Events i nærheden</h2>
                    <p class="link-text"><!--Hvis der blev lavet en fuld liste-->Se mere</p>
                </div>
                <div class="scrolling-wrapper-flexbox">
                    <div class="card"><h2>Card</h2></div>
                    <div class="card"><h2>Card</h2></div>
                    <div class="card"><h2>Card</h2></div>
                    <div class="card"><h2>Card</h2></div>
                    <div class="card"><h2>Card</h2></div>
                    <div class="card"><h2>Card</h2></div>
                </div>

            </section>
        </div>

    </main>
